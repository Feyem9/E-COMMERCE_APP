{
    "installCommand": "npm install --legacy-peer-deps",
    "buildCommand": "npm run build -- --configuration production && cp dist/market/browser/index.csr.html dist/market/browser/index.html",
    "outputDirectory": "dist/market/browser",
    "framework": "angular",
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/index.html",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=0, must-revalidate"
                }
            ]
        }
    ]
}